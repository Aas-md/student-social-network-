    <style name="Theme.PdfUpload2.Fullscreen" parent="Theme.PdfUpload2">
        <item name="android:actionBarStyle">@style/Widget.Theme.PdfUpload2.ActionBar.Fullscreen
        </item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="ThemeOverlay.PdfUpload2.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <style name="round_shape"  parent="">
        <item name="cornerSize">10%</item>
